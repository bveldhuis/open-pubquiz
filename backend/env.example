# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=pubquiz_user
DB_PASSWORD=pubquiz_password
DB_DATABASE=pubquiz

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:4200

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session Cleanup Configuration
# Enable automatic cleanup of inactive sessions (default: true)
CLEANUP_ENABLED=true

# How often to run cleanup in minutes (default: 60 minutes)
CLEANUP_INTERVAL_MINUTES=60

# How many hours of inactivity before ending a session (default: 4 hours)
CLEANUP_INACTIVE_HOURS=4

# Enable cleanup logging (default: true)
CLEANUP_LOG=true
